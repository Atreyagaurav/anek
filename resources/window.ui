<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <object class="GtkTextBuffer" id="buf_file"/>
  <object class="GtkApplicationWindow" id="window">
    <property name="title" translatable="1">Anek Command Manager</property>
    <property name="default-width">500</property>
    <property name="default-height">500</property>
    <property name="icon-name">input-keyboard</property>
    <property name="child">
      <object class="GtkBox">
	<property name="margin-start">10</property>
	<property name="margin-end">10</property>
	<property name="margin-top">10</property>
	<property name="margin-bottom">10</property>
        <property name="orientation">vertical</property>
	<property name="spacing">10</property>
        <child>
          <object class="GtkBox">
	    <property name="spacing">10</property>
            <child>
              <object class="GtkLabel">
                <property name="label" translatable="1">Project:</property>
                <property name="justify">right</property>
                <property name="width-chars">8</property>
              </object>
            </child>
            <child>
              <object class="GtkText" id="txt_browse">
                <property name="width-chars">70</property>
                <property name="hexpand">1</property>
                <property name="editable">False</property>
              </object>
            </child>
            <child>
              <object class="GtkButton" id="btn_browse">
		<property name="label">Browse</property>
              </object>
            </child>
          </object>
        </child>
	<child>
	  <!-- n-columns=2 n-rows=3 -->
	  <object class="GtkGrid">
            <property name="row-spacing">10</property>
            <property name="column-spacing">10</property>
            <property name="row-homogeneous">False</property>
            <property name="hexpand">1</property>
	    <child>
              <object class="GtkLabel">
		<property name="valign">center</property>
		<property name="label" translatable="yes">Inputs</property>
		<layout>
		  <property name="column">0</property>
		  <property name="row">0</property>
		</layout>
              </object>
            </child>
            <child>
              <object class="GtkLabel">
		<property name="valign">center</property>
		<property name="label" translatable="yes">Task</property>
		<layout>
		  <property name="column">0</property>
		  <property name="row">1</property>
		</layout>
              </object>
            </child>
            <child>
              <object class="GtkButton" id="btn_execute">
		<property name="label" translatable="yes">Execute</property>
		<property name="receives-default">True</property>
		<property name="valign">center</property>
		<layout>
		  <property name="column">0</property>
		  <property name="row">2</property>
		</layout>
              </object>
            </child>
            <child>
              <object class="GtkNotebook" id="nb_input">
                <property name="hexpand">1</property>
		<child>
		  <object class="GtkBox">
		    <property name="orientation">vertical</property>
		    <property name="spacing">10</property>
                    <child>
                      <object class="GtkDropDown" id="dd_input">
			<property name="hexpand">1</property>
			<property name="enable-search">True</property>
			<property name="search-match-mode">substring</property>
			<property name="expression">
			  <lookup type="GtkStringObject" name='string'></lookup>
			</property>
                      </object>
                    </child>
		    <child>
		      <object class="GtkScrolledWindow">
			<property name="hexpand">True</property>
			<property name="vexpand">True</property>
			<child>
			  <object class="GtkTextView" id="tv_input">
			    <property name="editable">False</property>
			    <property name="vexpand">1</property>
			  </object>
			</child>
		      </object>
		    </child>
		  </object>
		</child>
		<child type="tab">
		  <object class="GtkLabel">
                    <property name="label" translatable="yes">Inputs</property>
		  </object>
		</child>
		
		<child>
		  <object class="GtkBox">
		    <property name="orientation">vertical</property>
		    <property name="spacing">10</property>
                    <child>
                      <object class="GtkDropDown" id="dd_batch">
			<property name="valign">start</property>
			<property name="enable-search">True</property>
			<property name="search-match-mode">substring</property>
			<property name="expression">
			  <lookup type="GtkStringObject" name='string'></lookup>
			</property>
                      </object>
                    </child>
		    
		    <child>
		      <object class="GtkScrolledWindow">
			<property name="hexpand">True</property>
			<property name="vexpand">True</property>
			<child>
			  <object class="GtkTextView" id="tv_batch">
			    <property name="editable">False</property>
			    <property name="vexpand">1</property>
			  </object>
			</child>
		      </object>
		    </child>
		  </object>
		</child>
		<child type="tab">
		  <object class="GtkLabel">
                    <property name="label" translatable="yes">Batch</property>
		  </object>
		</child>
		<child>
		  <object class="GtkBox">
		    <property name="orientation">vertical</property>
		    <property name="spacing">10</property>
                    <child>
                      <object class="GtkDropDown" id="dd_loop">
			<property name="valign">start</property>
			<property name="enable-search">True</property>
			<property name="search-match-mode">substring</property>
			<property name="expression">
			  <lookup type="GtkStringObject" name='string'></lookup>
			</property>
                      </object>
                    </child>

		    <child>
		      <object class="GtkScrolledWindow">
			<property name="hexpand">True</property>
			<property name="vexpand">True</property>
			<child>
			  <object class="GtkTextView" id="tv_loop">
			    <property name="editable">False</property>
			    <property name="vexpand">1</property>
			  </object>
			</child>
		      </object>
		    </child>
		  </object>
		</child>
		<child type="tab">
		  <object class="GtkLabel">
                    <property name="label" translatable="yes">Loop</property>
		  </object>
		</child>
		<layout>
		  <property name="column">1</property>
		  <property name="row">0</property>
		</layout>
              </object>
            </child>
	    <child>
              <object class="GtkNotebook" id="nb_task">
                <property name="hexpand">1</property>
		<child>
		  <object class="GtkBox">
		    <property name="orientation">vertical</property>
		    <property name="spacing">10</property>
		    <child>
		      <object class="GtkBox">
			<property name="spacing">10</property>
			<child>
			  <object class="GtkCheckButton" id="cb_pipeline">
			    <property name="label">Pipelines</property>
			    <property name="valign">start</property>
			  </object>
			</child>
			<child>
			  <object class="GtkDropDown" id="dd_command">
			    <property name="valign">start</property>
			    <property name="hexpand">1</property>
			    <property name="enable-search">True</property>
			    <property name="search-match-mode">substring</property>
			    <property name="expression">
			      <lookup type="GtkStringObject" name='string'></lookup>
			    </property>
			  </object>
			</child>
		      </object>
		    </child>
                    <child>
                      <object class="GtkScrolledWindow">
			<child>
			  <object class="GtkTextView" id="tv_command">
			    <property name="editable">False</property>
			    <property name="vexpand">1</property>
			    <property name="hexpand">1</property>
			  </object>
			</child>
                      </object>
                    </child>
		  </object>
		</child>
		<child type="tab">
		  <object class="GtkLabel">
                    <property name="label" translatable="yes">Run</property>
		    <layout>
                      <property name="tab-fill">False</property>
		    </layout>
		  </object>
		</child>
		<child>
		  <object class="GtkBox">
		    <property name="orientation">vertical</property>
			<property name="spacing">5</property>
		<child>
		  <object class="GtkBox">
		    <property name="spacing">10</property>
		    <child>
		      <object class="GtkScrolledWindow">
			<child>
			  <object class="GtkListBox" id="lb_variable">
			    <property name="vexpand">True</property>
			    <property name="selection-mode">multiple</property>
			    <property name="hexpand">1</property>
			  </object>
			</child>
		      </object>
		    </child>
		    <child>
		      <object class="GtkBox">
			<property name="orientation">vertical</property>
			<property name="spacing">2</property>
			<child>
			  <object class="GtkCheckButton" id="cb_variable_safe">
			    <property name="label">Allow Empty</property>
			    <property name="valign">start</property>
			  </object>
			</child>
			<child>
			  <object class="GtkCheckButton" id="cb_variable_all">
			    <property name="label">Mark/Unmark All</property>
			    <property name="valign">start</property>
			  </object>
			</child>
			<child>
			  <object class="GtkDropDown" id="dd_export_type">
			    <property name="hexpand">1</property>		
			    <property name="model">
			      <object class="GtkStringList">
				<items>
				  <item translatable="no">CSV</item>
				  <item translatable="no">JSON</item>
				  <item translatable="no">Plain</item>
				</items>
			      </object>
			    </property>
			  </object>
			</child>
		      </object>
		    </child>
		      </object>
		    </child>
			<child>
			  <object class="GtkBox">
			    <property name="spacing">10</property>
			    <child>
			      <object class="GtkCheckButton" id="cb_export_file">
				<property name="label">To File:</property>
				<property name="valign">start</property>
			      </object>
			    </child>
			    <child>
			      <object class="GtkText" id="txt_export_file">
				<property name="width-chars">70</property>
				<property name="hexpand">1</property>
				<property name="editable">False</property>
			      </object>
			    </child>
			    <child>
			      <object class="GtkButton" id="btn_export_file">
				<property name="label">Browse</property>
			      </object>
			    </child>
			  </object>
			</child>
                  </object>
                </child>
		
		<child type="tab">
		  <object class="GtkLabel">
                    <property name="label" translatable="yes">Export</property>
		    <layout>
                      <property name="position">1</property>
                      <property name="tab-fill">False</property>
		    </layout>
		  </object>
		</child>
		<child>
		  <object class="GtkLabel">
                    <property name="label" translatable="1">TODO</property>
                    <property name="justify">right</property>
                    <property name="width-chars">8</property>
		  </object>
		</child>
		<child type="tab">
		  <object class="GtkLabel">
                    <property name="label" translatable="yes">Render</property>
		    <layout>
                      <property name="position">2</property>
                      <property name="tab-fill">False</property>
		    </layout>
		  </object>
		</child>
		<layout>
		  <property name="column">1</property>
		  <property name="row">1</property>
		</layout>
	      </object>
              
            </child>
            
            <child>
              <object class="GtkBox">
		<property name="orientation">vertical</property>
		<property name="spacing">10</property>
                <property name="hexpand">1</property>
		<child>
		  <object class="GtkText" id="txt_command">
                    <property name="editable">False</property>
                  </object>
		</child>
		<layout>
		  <property name="column">1</property>
		  <property name="row">2</property>
		</layout>
              </object>
            </child>
	  </object>
	</child>
	
      </object>
    </property>
  </object>
</interface>
